{
  "name": "dodo-sync",
  "version": "0.1.0",
  "description": "Sync Dodo Payments data with your database",
  "keywords": [
    "dodopayments",
    "sync",
    "database",
    "mongodb"
  ],
  "homepage": "https://github.com/dodopayments/dodo-sync#readme",
  "bugs": {
    "url": "https://github.com/dodopayments/dodo-sync/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dodopayments/dodo-sync.git"
  },
  "license": "ISC",
  "author": "Dodo Payments",
  "type": "module",
  "bin": {
    "dodo-sync": "dist/cli.js"
  },
  "scripts": {
    "build:code": "tsdown",
    "db": "sh ./scripts/mongodb.sh",
    "build:cli": "bun build src/cli/index --outfile dist/cli.js --target node --minify",
    "build": "bun run build:code && bun run build:cli"
  },
  "dependencies": {
    "@inquirer/checkbox": "^5.0.1",
    "@inquirer/input": "^5.0.1",
    "@inquirer/select": "^5.0.1",
    "dodopayments": "^2.6.1",
    "mongoose": "^8.20.1",
    "mysql2": "^3.15.3",
    "pg": "^8.16.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/pg": "^8.15.6",
    "@types/yargs": "^17.0.35",
    "tsdown": "^0.16.8"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  }
}
